{
   "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "es2017"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude:": [
        "node_modules"
    ]
}